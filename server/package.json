{
  "name": "@openpulse/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "drizzle-kit push && tsx watch --conditions=@openpulse/source src/index.ts",
    "build": "tsc",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx --conditions=@openpulse/source src/db/seed.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@openpulse/shared": "workspace:*",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "drizzle-orm": "^0.45",
    "express": "^5",
    "jsonwebtoken": "^9.0.3",
    "zod": "^4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22",
    "drizzle-kit": "^0.31",
    "tsx": "^4",
    "typescript": "~5.9"
  }
}
