  },
  "devDependencies": {
    "@types/better-sqlite3": "^7",
    "@types/express": "^5",
    "@types/node": "^22",
    "drizzle-kit": "^0.31",
    "tsx": "^4",
    "typescript": "~5.9"
  }
}
